{
  "name": "rv-simulator",
  "displayName": "RISCV simulator",
  "description": "A RISCV simulator.",
  "version": "0.0.1",
  "repository": "https://github.com/utpgustavogutierrez/vsc-riscv.git",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rv-simulator.simulate",
        "title": "RISCV simulator: simulate program execution",
        "icon": {
          "light": "media/play-svgrepo-com.svg",
          "dark": "media/play-svgrepo-com.svg"
        }
      },
      {
        "command": "rv-simulator.enableProgMemSync",
        "title": "RISCV simuator: synchronize code with program memory"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riscv",
          "title": "RISCV",
          "icon": "media/cpu-chip-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "riscv": [
        {
          "type": "webview",
          "id": "rv-simulator.instruction",
          "name": "Instruction"
        },
        {
          "type": "webview",
          "id": "rv-simulator.registers",
          "name": "Registers"
        },
        {
          "type": "webview",
          "id": "rv-simulator.progmem",
          "name": "Program memory"
        }
      ]
    },
    "configuration": {
      "title": "RISCV Simulator",
      "properties": {
        "rv-simulator.registersView.sort": {
          "type": "string",
          "default": "name",
          "enum": ["name", "last modified"],
          "enumDescriptions": [
            "Sort registers by its name (x0, x1, ...)",
            "Sort registers by modification (last modified comes first"
          ],
          "description": "Sort registers in according to name or modification time."
        },
        "rv-simulator.programMemoryView.instructionFormat": {
          "type": "string",
          "default": "binary",
          "enum": ["binary", "hexadecimal"],
          "enumDescriptions": [
            "Displays instructions as as  binary in four words.",
            "Displays instructions as an 8 places hexadecimal."
          ],
          "description": "Display instructions in binary or hexadecimal notation. For instance, instruction add tp, x5, a0 is 00000000 10100010 10000010 00110011 in binary and 00-A2-82-33 in hexadecimal."
        },
        "rv-simulator.programMemoryView.codeSynchronization": {
          "type": "boolean",
          "default": true,
          "description": "Keep source code editor synchronized with program memory (and warn when it is not.)."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "rv-simulator.simulate",
          "when": "view == rv-simulator.registers"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+f12",
        "command": "rv-simulator.simulate"
      }
    ],
    "languages": [
      {
        "id": "riscvasm",
        "extensions": [".asm"],
        "aliases": ["RiscVAsm", "riscvasm"],
        "configuration": "./riscv-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "riscvasm",
        "scopeName": "source.riscv",
        "path": "./syntaxes/riscv.tmLanguage"
      }
    ],
    "themes": [
      {
        "label": "Sample Light",
        "uiTheme": "vs",
        "path": "./themes/Sample_Light.tmTheme"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "parser": "npx peggy --allowed-start-rules Start,Instruction,SourceElement -o src/utilities/riscv.js --format es src/utilities/riscv.peg",
    "preparser": "npx peggy --allowed-start-rules Start -o src/utilities/riscv-pre.js --format es src/utilities/riscv-pre.peg"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.6.8",
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.10",
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "16.x",
    "@types/tabulator-tables": "^6.2.2",
    "@types/vscode": "^1.74.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "bootstrap": "^5.3.3",
    "dom-to-svg": "^0.12.2",
    "esbuild": "0.16.17",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.57.0",
    "glob": "^8.0.3",
    "peggy": "^4.0.2",
    "prettier": "^2.8.1",
    "tabulator-tables": "^6.2.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "jspdf": "^2.5.1",
    "lodash": "^4.17.21",
    "lodash-cli": "^3.10.1",
    "lodash-es": "^4.17.21",
    "svg2pdf.js": "^2.2.4",
    "winston": "^3.13.1",
    "winston-transport-vscode": "^0.1.0"
  }
}
