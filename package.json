{
  "name": "rv-simulator",
  "displayName": "RISCV simulator",
  "description": "An interactive RISC-V assembly simulator with memory views, step execution, and code visualization.",
  "version": "0.0.5",
  "repository": "https://github.com/utpgustavogutierrez/vsc-riscv.git",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rv-simulator.simulate",
        "title": "RISCV simulator: simulate program execution",
        "icon": "$(chip)",
        "when": "!ext.isSimulating"
      },
      {
        "command": "rv-simulator.textSimulate",
        "title": "RISCV simulator: text-simulate program execution",
        "icon": "$(symbol-parameter)",
        "when": "!ext.isSimulating"
      },
      {
        "command": "rv-simulator.simulateStep",
        "title": "RISCV simulator: step simulation",
        "icon": "$(debug-step-over)",
        "when": "ext.isSimulating"
      },
      {
        "command": "rv-simulator.simulateStop",
        "title": "RISCV simulator: stop simulation",
        "icon": "$(debug-stop)",
        "when": "ext.isSimulating"
      },
      {
        "command": "rv-simulator.build",
        "title": "RISCV simulator: build program",
        "icon": "$(testing-run-all-icon)"
      },
      {
        "command": "rv-simulator.progMemExportJSON",
        "title": "RISCV simulator: export instruction memory as JSON"
      },
      {
        "command": "rv-simulator.irExportJSON",
        "title": "RISCV simulator: export intermediate representation as JSON"
      },
      {
        "command": "rv-simulator.irForCurrentLine",
        "title": "RISCV simulator: compute internal representation for current line"
      },
      {
        "command": "rv-simulator.enableProgMemSync",
        "title": "RISCV simuator: synchronize code with program memory"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "riscv",
          "title": "RISCV",
          "icon": "media/cpu-chip-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "riscv": [
        {
          "type": "webview",
          "id": "rv-simulator.riscv",
          "name": "RiscV simulator"
        }
      ]
    },
    "configuration": {
      "title": "RISCV Simulator",
      "properties": {
        "rv-simulator.editor.encoderUpdatePolicy": {
          "type": "string",
          "default": "On save",
          "enum": [
            "On save",
            "On change",
            "Manual"
          ],
          "enumDescriptions": [
            "every time the file is saved.",
            "every time the file changes (this might affect performance).",
            "on user build request."
          ],
          "description": "Defines when the encoder output will be updated. This requires parsing the code."
        },
        "rv-simulator.registersView.sort": {
          "type": "string",
          "default": "name",
          "enum": [
            "name",
            "last modified"
          ],
          "enumDescriptions": [
            "Sort registers by its name (x0, x1, ...)",
            "Sort registers by modification (last modified comes first"
          ],
          "description": "Sort registers in according to name or modification time."
        },
        "rv-simulator.programMemoryView.instructionFormat": {
          "type": "string",
          "default": "binary",
          "enum": [
            "binary",
            "hexadecimal"
          ],
          "enumDescriptions": [
            "Displays instructions as as  binary in four words.",
            "Displays instructions as an 8 places hexadecimal."
          ],
          "description": "Display instructions in binary or hexadecimal notation. For instance, instruction add tp, x5, a0 is 00000000 10100010 10000010 00110011 in binary and 00-A2-82-33 in hexadecimal."
        },
        "rv-simulator.programMemoryView.codeSynchronization": {
          "type": "boolean",
          "default": true,
          "description": "Keep source code editor synchronized with program memory (and warn when it is not.)."
        },
        "rv-simulator.dataMemoryView.memorySize": {
          "type": "number",
          "default": 128,
          "enum": [
            128,
            256,
            512,
            1024
          ],
          "enumDescriptions": [
            "128 bytes.",
            "256 bytes.",
            "512 bytes.",
            "1024 bytes."
          ],
          "description": "Size in bytes of the data memory."
        },
        "rv-simulator.dataMemoryView.stackPointerInitialAddress": {
          "type": "number",
          "default": 124,
          "description": "The initial address of the stack pointer. Must be 8 bytes aligned. The stack pointer grows from higher values down to lower values. This address must be lower than the last possible address to write."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "rv-simulator.build",
          "group": "navigation",
          "when": "editorLangId == riscvasm && !ext.isSimulating"
        },
        {
          "command": "rv-simulator.simulate",
          "group": "navigation",
          "when": "editorLangId == riscvasm && !ext.isSimulating"
        },
        {
          "command": "rv-simulator.textSimulate",
          "group": "navigation",
          "when": "editorLangId == riscvasm && !ext.isSimulating"
        },
        {
          "command": "rv-simulator.simulateStep",
          "group": "navigation",
          "when": "editorLangId == riscvasm && ext.isSimulating"
        },
        {
          "command": "rv-simulator.simulateStop",
          "group": "navigation",
          "when": "editorLangId == riscvasm && ext.isSimulating"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+f12",
        "command": "rv-simulator.simulate"
      }
    ],
    "languages": [
      {
        "id": "riscvasm",
        "extensions": [
          ".asm"
        ],
        "aliases": [
          "RiscVAsm",
          "riscvasm"
        ],
        "configuration": "./riscv-configuration.json"
      },
      {
        "id": "riscvbin",
        "extensions": [
          ".rvbin"
        ],
        "aliases": [
          "RiscVBin",
          "riscvbin"
        ]
      }
    ],
    "grammars": [
      {
        "language": "riscvasm",
        "scopeName": "source.riscv",
        "path": "./syntaxes/riscv.tmLanguage"
      },
      {
        "language": "riscvbin",
        "scopeName": "binary.riscv",
        "path": "./syntaxes/riscvbin.tmLanguage"
      }
    ],
    "themes": [
      {
        "label": "Sample Light",
        "uiTheme": "vs",
        "path": "./themes/Sample_Light.tmTheme"
      },
      {
        "label": "Custom Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/Custom_Dark.tmTheme"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package2": "vsce package",
    "package": "cross-env NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "parservs": "npx peggy --allowed-start-rules Start,Instruction,SourceElement -o src/utilities/riscv.ts --format es src/utilities/riscv.peg",
    "parser": "npx peggy --allowed-start-rules Start,Instruction,SourceElement -o src/utilities/riscv.ts --format commonjs src/utilities/riscv.peg",
    "assembler": "npx tsc src/utilities/cli.ts",
    "clean": "rimraf out node_modules package-lock.json",
    "rebuild": "npm run clean && npm install && npm run compile"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.6.8",
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.10",
    "@types/glob": "^8.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "16.x",
    "@types/tabulator-tables": "^6.2.2",
    "@types/vscode": "^1.74.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/vsce": "^3.3.0",
    "bootstrap": "^5.3.3",
    "commander": "^12.1.0",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.14",
    "dom-to-svg": "^0.12.2",
    "esbuild": "0.16.17",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.57.0",
    "figlet": "^1.7.0",
    "glob": "^8.0.3",
    "peggy": "^4.0.2",
    "prettier": "^2.8.1",
    "rimraf": "^6.0.1",
    "tabulator-tables": "^6.2.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "@vscode/vsce": "^3.3.0",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "jspdf": "^2.5.1",
    "lodash-es": "^4.17.21",
    "svg2pdf.js": "^2.2.4",
    "winston": "^3.13.1",
    "winston-transport-vscode": "^0.1.0"
  }
}
