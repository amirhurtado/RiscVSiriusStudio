{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/naming-convention": "warn",
    "@typescript-eslint/semi": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": "off",
    "camelcase": "off",
    "curly": ["off"]
  },
  "ignorePatterns": ["node_modules", "out", "dist", "**/*.d.ts",  "src/utilities/riscv.ts"]
}
