// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "out": false, // set this to true to hide the "out" folder with the compiled JS files
  },
  "search.exclude": {
    "out": true, // set this to false to include "out" folder in search results
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "cmake.configureOnOpen": false,
  "peacock.remoteColor": "#42b883",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#28bde3",
    "activityBar.background": "#28bde3",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#c51aa3",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#28bde3",
    "statusBar.background": "#199dbf",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#28bde3",
    "statusBarItem.remoteBackground": "#199dbf",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#199dbf",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#199dbf99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#199dbf",
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "coffeescript"
  ]
}